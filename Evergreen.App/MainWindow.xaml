<Window x:Class="Evergreen.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Evergreen.App"
        xmlns:nodenetwork="clr-namespace:NodeNetwork.Views;assembly=NodeNetwork"
        mc:Ignorable="d" Height="600" Width="1200">
    <Grid>
        <nodenetwork:NetworkView x:Name="networkView" />
        <Button Content="Add Transition" x:Name="addTransition" Click="addTransition_Click" HorizontalAlignment="Right" Margin="0,35,10,0" VerticalAlignment="Top"/>
        <Button Content="Add Choice" x:Name="addMultiChoice" Click="addChoice_Click" HorizontalAlignment="Right" Margin="0,60,10,0" VerticalAlignment="Top"/>
        <Button Content="New Start" x:Name="newStart" Click="newStart_Click" HorizontalAlignment="Right" Margin="0,85,10,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
